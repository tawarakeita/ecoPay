<% merchants.each do |merchant| %>
<div class="flex flex-col mt-4">
  <div class="flex mr-auto">
    <img src="https://placehold.jp/80x80.png" alt="店舗画像">
    <div class="flex flex-col items-start justify-center ml-4">
      <span class="text-lg font-semibold text-gray-800 mb-1"><%= merchant.name %></span>
      <span class="text-gray-800 text-[12px]"><%= merchant.address %></span>
    </div>
  </div>
  <span class="mt-1.5" class="text-gray-800 text-[12px]"><%= merchant.description %></span>
</div>
<% end %>
<div class="h-[120px]"></div>